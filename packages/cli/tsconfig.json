{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "types": ["node", "vitest/globals"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "./package.json",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../core" }]
}
